                aria-expanded="false"
              >
                <i class="fas fa-user-alt mr-1 text-gray"></i>My profile</a>
            <div class="dropdown-menu mt-3" aria-labelledby="pagesDropdown"><a
                class="dropdown-item border-0 transition-link"
                href="/profile"
              >My orders</a><a
                class="dropdown-item border-0 transition-link"
                href="/logout"
              >
                Logout</a></div></li>{{else}}
            <li class="nav-item"><a class="nav-link" href="/login">
                <i class="fas fa-user-alt mr-1 text-gray"></i>Login</a></li>
          {{/if}}
        </ul>
      </div>
    </nav>
  </div>
</header>
<div class="container">
<section
  class="hero pb-3 bg-cover bg-center d-flex align-items-center"
  style="background: url(img/hero-banner-alt2.jpeg)"
>
  <div class="container py-5">
    <div class="row px-4 px-lg-5">
      <div class="col-lg-6">
        <p class="text-muted small text-uppercase mb-2">We care about your health</p>
        <h1 class="h2 text-uppercase mb-3">HomeMed</h1><a
          class="btn btn-blue"
          href="/products"
        >Shop now</a>
      </div>
    </div>
  </div>
</section>
<!-- CATEGORIES SECTION-->
<section class="pt-5">
  <header class="text-center">
    <p class="small text-muted small text-uppercase mb-1">Các nhóm thuốc</p>
    <h2 class="h5 text-uppercase mb-4">Danh mục sản phẩm</h2>
  </header>
  <div class="row">
    {{#each categories}}
        <div class="col-md-6 mb-4 mb-md-4"><a
        class="category-item"
        href="/products?category={{id}}"
      ><img class="img-fluid" src="{{imagepath}}" alt="" /><strong
          class="category-item-title"
        >{{name}}</strong></a></div>
    {{/each}}
  </div>
</section>

<!-- TRENDING PRODUCTS-->
<section class="py-5">
  <header>
    <p class="small text-muted small text-uppercase mb-1">Sức khỏe là vàng</p>
    <h2 class="h5 text-uppercase mb-4">Sản phẩm mới</h2>
  </header>
  <div class="row">
    {{#each products}}
    <!-- PRODUCT-->
    <div class="col-xl-3 col-lg-4 col-sm-6">
      <div class="product text-center">
        <div class="position-relative mb-3">
          <div class="badge text-white badge-"></div><a
            class="d-block"
            href="/products/{{id}}"
          ><img class="img-fluid w-100" src="{{imagepath}}" alt="..." /></a>
          <div class="product-overlay">
            <ul class="mb-0 list-inline">
              <li class="list-inline-item m-0 p-0"><button
                  class="btn btn-sm btn-dark add-to-cart"
                  data-id={{id}}
                >Add to cart</button></li>
        
            </ul>
          </div>
        </div>
        <h6>
          <a class="reset-anchor" href="/products/{{id}}">{{name}}</a></h6>
        <p class="small text-muted">{{price}} VND</p>
      </div>
    </div>
        {{/each}}
</section>

